<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/textColorWhite">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_tela_sobre"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="@color/tabLayoutBottomColor"
        android:elevation="4dp"
        android:textAlignment="center"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:titleTextColor="@color/textColorWhite" />

    <ImageView
        android:id="@+id/image_view_logo_tab_sobre"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:contentDescription="@string/sobre"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_tela_sobre"
        app:layout_constraintVertical_bias="0.076"
        app:srcCompat="@drawable/logo_mao_aberta" />

    <TextView
        android:id="@+id/text_view_projeto_mao_aberta_sobre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="@string/nome_projeto"
        android:textAlignment="center"
        android:textColor="@color/textColorBlack"
        android:textSize="28sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_view_logo_tab_sobre"
        app:layout_constraintVertical_bias="0.129" />

    <TextView
        android:id="@+id/text_view_desenvolvido_por"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif"
        android:text="@string/desenvolvido_por"
        android:textAlignment="center"
        android:textColor="@color/textColorBlack"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_projeto_mao_aberta_sobre" />

    <TextView
        android:id="@+id/text_view_nome_desenvolvedor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif"
        android:text="@string/nome_desenvolvedor"
        android:textAlignment="center"
        android:textColor="@color/textColorBlack"
        android:textSize="18sp"
        android:textStyle="normal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_desenvolvido_por"/>

    <TextView
        android:id="@+id/text_view_versao_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:fontFamily="sans-serif"
        android:text="@string/versao_app"
        android:textAlignment="center"
        android:textColor="@color/textColorBlack"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>