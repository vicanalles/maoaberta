<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginTop="5dp"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/textColorWhite"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:id="@+id/linear_layout_organizacoes"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rounded_edittext"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.5">

            <ImageView
                android:id="@+id/image_view_logo_entidade"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/logo_mao_aberta" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.3">

            <TextView
                android:id="@+id/text_view_nome_instituicao"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Nome da Instituição"
                android:textSize="16sp"
                android:textStyle="normal"
                android:textColor="@color/textColorBlack"
                android:fontFamily="sans-serif"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_keyboard_arrow_right"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>