<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColorApp">

    <EditText
        android:id="@+id/edit_text_nome_cadastro_cliente"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="@string/nome_cliente"
        android:inputType="textPersonName"
        android:paddingEnd="0dp"
        android:paddingStart="10dp"
        android:textAlignment="textStart"
        android:textColor="@color/textColorBlack"
        android:textSize="15sp"
        android:typeface="normal"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/edit_text_email_cadastro_cliente"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:paddingEnd="0dp"
        android:paddingStart="10dp"
        android:textAlignment="textStart"
        android:textColor="@color/textColorBlack"
        android:textSize="15sp"
        android:typeface="normal"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_text_nome_cadastro_cliente"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/edit_text_telefone_cadastro_cliente"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="@string/telefone"
        android:inputType="phone"
        android:paddingEnd="0dp"
        android:paddingStart="10dp"
        android:textAlignment="textStart"
        android:textColor="@color/textColorBlack"
        android:textSize="15sp"
        android:typeface="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_text_email_cadastro_cliente"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/edit_text_senha_cadastro_cliente"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="@string/senha"
        android:inputType="textPassword"
        android:paddingEnd="0dp"
        android:paddingStart="10dp"
        android:textAlignment="textStart"
        android:textColor="@color/textColorBlack"
        android:textSize="15sp"
        android:typeface="normal"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_text_telefone_cadastro_cliente"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/edit_text_confirmar_senha_cadastro_cliente"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="@string/confirmar_senha"
        android:inputType="textPassword"
        android:paddingEnd="0dp"
        android:paddingStart="10dp"
        android:textAlignment="textStart"
        android:textColor="@color/textColorBlack"
        android:textSize="15sp"
        android:typeface="normal"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_text_senha_cadastro_cliente"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button_cadastrar_cliente"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="sans-serif"
        android:text="@string/cadastrar"
        android:textColor="@color/textColorWhite"
        android:textSize="15sp"
        android:typeface="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_text_confirmar_senha_cadastro_cliente"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:id="@+id/linear_layout_facebook"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:background="@color/facebook_background_button_color"
        android:clickable="true"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_cadastrar_cliente"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/image_view_facebook_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/facebook"
            android:src="@drawable/ic_action_facebook" />

        <TextView
            android:id="@+id/text_view_facebook_cadastro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:text="@string/string_text_facebook"
            android:textAlignment="center"
            android:textColor="@color/textColorWhite"
            android:textSize="15sp"
            android:textStyle="normal" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_gmail"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="5dp"
        android:background="@color/gmail_background_button_color"
        android:clickable="true"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear_layout_facebook"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/image_view_gmail_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/string_text_gmail"
            android:src="@drawable/ic_action_gmail" />

        <TextView
            android:id="@+id/text_view_gmail_cadastro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:text="@string/string_text_gmail"
            android:textAlignment="center"
            android:textColor="@color/textColorWhite"
            android:textSize="15sp"
            android:textStyle="normal" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>